{
    "pluginAlias": "KNX Bridge",
    "pluginType": "platform",
    "singular": false,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Knx Bridge Name",
                "type": "string"
            },
            "knxIpGatewayIp": {
                "title": "KNX/IP Gateway IP",
                "required": true,
                "type": "string"
            },
            "accessories": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "title": "Accessory Name",
                            "type": "string",
                            "required": true
                        },
                        "services": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "required": true
                                    },
                                    "id": {
                                        "title": "Service",
                                        "type": "string",
                                        "required": true,
                                        "oneOf": [
                                            {
                                                "title": "Lightbulb",
                                                "enum": [
                                                    "Lightbulb"
                                                ]
                                            },
                                            {
                                                "title": "CO2 Sensor",
                                                "enum": [
                                                    "CarbonDioxideSensor"
                                                ]
                                            }
                                        ]
                                    },
                                    "addresses": {
                                        "type": "array",
                                        "items": {
                                            "pattern": "^[1-2]?[0-9]?[0-9]/[1-2]?[0-9]?[0-9]/[1-2]?[0-9]?[0-9]$",
                                            "title": "Group Address",
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "notes": {
                "type": "string"
            }
        }
    },
    "layout": [
        {
            "key": "name"
        },
        {
            "key": "knxIpGatewayIp",
            "placeholder": "192.168.x.x"
        },
        {
            "type": "section",
            "title": "Accessories",
            "expandable": true,
            "expanded": false,
            "items": [
                {
                    "key": "accessories",
                    "notitle": true,
                    "type": "array",
                    "items": [
                        {
                            "type": "div",
                            "items": [
                                {
                                    "key": "accessories[].name"
                                },
                                {
                                    "key": "accessories[].services",
                                    "title": "Services",
                                    "type": "section",
                                    "expandable": true,
                                    "expanded": false,
                                    "items": [
                                        {
                                            "key": "accessories[].services[].name"
                                        },
                                        {
                                            "key": "accessories[].services[].id"
                                        },
                                        {
                                            "key": "accessories[].services[].addresses",
                                            "notitle": true,
                                            "items": [
                                                {
                                                    "type": "string",
                                                    "title": "KNX Group Address"
                                                }
                                            ],
                                            "type": "array"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "section",
            "title": "Notes",
            "expandable": true,
            "expanded": false,
            "items": [
                {
                    "key": "notes",
                    "type": "textarea",
                    "notitle": true
                }
            ]
        }
    ],
    "form": null,
    "display": null
}