{
    "pluginAlias": "KNX Bridge",
    "pluginType": "platform",
    "singular": false,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Knx Bridge Name",
                "type": "string"
            },
            "knxIpGatewayIp": {
                "title": "KNX/IP Gateway IP",
                "required": true,
                "type": "string"
            },
            "accessories": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "title": "Accessory Name",
                            "type": "string",
                            "required": true
                        },
                        "service": {
                            "title": "Service",
                            "type": "string",
                            "required": true,
                            "oneOf": [
                                { "title": "Lightbulb", "enum": ["Lightbulb"] },
                                { "title": "CO2 Sensor", "enum": ["CarbonDioxideSensor"] }
                            ]
                        },
                        "addresses": {
                            "type": "array",
                            "items": {
                                "title": "KNX Group Address",
                                "type": "string",
                                "required": true,
                                "pattern": "^[1-2]?[0-9]?[0-9]/[1-2]?[0-9]?[0-9]/[1-2]?[0-9]?[0-9]$"
                            }
                        }
                    }
                }
            },
            "notes": {
                "type": "string"
            }
        }
    },
    "layout": [
        {
            "key": "name"
        },
        {
            "key": "knxIpGatewayIp",
            "placeholder": "192.168.x.x"
        },
        {
            "type": "section",
            "title": "Accessories",
            "expandable": true,
            "expanded": true,
            "items": [
                {
                    "key": "accessories",
                    "notitle": true,
                    "type": "array",
                    "items": [
                        {
                            "type": "div",
                            "items": [
                                {
                                    "key": "accessories[].name"
                                },
                                {
                                    "key": "accessories[].service"
                                },
                                {
                                    "key": "accessories[].addresses",
                                    "notitle": true,
                                    "items": [
                                        { "type": "string", "title": "KNX Group Address" }
                                        ],
                                    "type": "array"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "section",
            "title": "Notes",
            "expandable": true,
            "expanded": false,
            "items": [
                {
                    "key": "notes",
                    "type": "textarea",
                    "notitle": true
                }
            ]
        }
    ],
    "form": null,
    "display": null
}